			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"try {",
							"  const json = pm.response.json();",
							"  console.log(\"Response JSON:\", json);",
							"",
							"  if (json.orderId) {",
							"    pm.environment.set(\"orderId\", json.orderId);",
							"    console.log(\"orderId set:\", json.orderId);",
							"  } else {",
							"    console.log(\"orderId not found in response\");",
							"  }",
							"} catch (e) {",
							"  console.log(\"Failed to parse response\", e);",
							"}",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"tokenIn\": \"SOL\",\n  \"tokenOut\": \"USDC\",\n  \"amount\": 1\n}\n",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseURL}}/api/orders/execute",
					"host": [
						"{{baseURL}}"
					],
					"path": [
						"api",
						"orders",
						"execute"
					]
				},
				"description": "**Creates a new market order for execution.**  \n  \nValidates input and returns a unique `orderId` used to subscribe to WebSocket status updates.\n\n**Notes:**\n\n- This endpoint only creates the order and enqueues it for processing\n    \n- Execution progress is streamed via the WebSocket endpoint using the returned orderId"
			},
			"response": []
		},
